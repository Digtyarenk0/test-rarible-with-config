{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/shared/types"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "types": [
      "./node_modules/@lingui/macro/global"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "config-overrides.js"
  ],
}